<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bmerah"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.mobile.yulihasni.apphotel.Promo">

    <TextView
        android:text="Pilihan Promo"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/txtPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:textColor="@color/white"
        android:id="@+id/spinner1"
        android:layout_below="@+id/txtPromo"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </Spinner>
    <Button
        android:id="@+id/btnProsesPromo"

        android:text="Proses"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_below="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtHasilPromo"
        android:layout_below="@+id/btnProsesPromo"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
</ScrollView>