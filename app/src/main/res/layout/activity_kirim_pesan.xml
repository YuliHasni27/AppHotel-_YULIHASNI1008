<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bmerah"
    tools:context="com.mobile.yulihasni.apphotel.KirimPesan">

    <TextView
        android:id="@+id/txtKirimSaran"
        android:text="Kritik dan Saran"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtNama"
        android:text="Nama"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_below="@+id/txtKirimSaran"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editNamaSaran"
        android:layout_below="@+id/txtNama"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtEmailSaran"
        android:text="Email"
        android:layout_below="@+id/editNamaSaran"
        android:textSize="20dp"
        android:textColor="@color/orange"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editEmailSaran"
        android:layout_below="@id/txtEmailSaran"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtPesan"
        android:text="Tuliskan pesan disini"
        android:layout_below="@+id/editEmailSaran"
        android:textSize="20dp"
        android:textColor="@color/orange"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editPesan"
        android:layout_below="@id/txtPesan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnKirim"
        android:text="kirim"
        android:textSize="20dp"
        android:layout_below="@+id/editPesan"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
